<% @page_title = 'Student Details' %>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
      <h2>Details of <%= @user.name %>
        <% if @personal_info.nil? %>
        <%= link_to 'Complete Personal Info', new_user_personal_info_path(user_id: @user.id), class: "btn btn-primary btn-#{'xs'} " %>
        <%end%>
        <% if !@personal_info.nil? %>
          <%= link_to 'Edit Personal Info', edit_user_personal_info_path(@personal_info.users_id,@personal_info.id), class: 'btn btn-primary pull-right'%>
        <%end%>

      </h2>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
  <table class="table table-bordered table-striped">
    <tr>
      <td>Name</td>
      <td><%= @user.name  %></td>
    </tr>
    <tr>
      <td>Father's Name</td>
      <% if !@personal_info.nil? %>
        <td><%= @personal_info.fathers_name%></td>
        <% end %>
    </tr>
    <tr>
      <td>Mother's Name</td>
      <% if !@personal_info.nil? %>
      <td><%= @personal_info.mothers_name%></td>
      <% end %>
    </tr>
    <tr>
      <td>Registration No.</td>
      <% if !@personal_info.nil? %>
      <td><%= @personal_info.users_id%></td>
      <% end %>
    </tr>
    <tr>
      <td>Department</td>
      <% if !@user.nil? %>
      <% @department = Department.find(@user.departments_id)%>
      <td><%= @department.name %></td>
      <% end %>
    </tr>
    <tr>
      <td>Hall</td>
      <% if !@personal_info.nil? %>
      <td><%= @hall.name %></td>
      <% end %>
    </tr>
    <tr>
      <td>Session</td>
      <% if !@personal_info.nil? %>
      <% @batches = Batch.find(@personal_info.batches_id)%>
      <td><%= @batches.name %></td>
      <% end %>
    </tr>
    <tr>
      <td>Phone number</td>
      <% if !@personal_info.nil? %>
      <td><%= @personal_info.phone_number %></td>
      <% end%>
    </tr>
    <tr>
      <td>Email</td>
      <% if !@user.nil? %>
      <td><%= @user.email %></td>
      <% end %>
    </tr>
    <tr>
      <td>Address</td>
      <% if !@personal_info.nil? %>
      <td><%= @personal_info.address%></td>
      <% end %>
    </tr>
    <tr>
      <td>Date Of Birth</td>
      <% if !@personal_info.nil? %>
      <td><%= @personal_info.date_of_birth %></td>
      <% end %>
    </tr>

  </table>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
      <h1>
          <%= link_to 'Apply for Semester Examination', new_user_registration_path(session[:user_id]), class: 'btn btn-info pull-right'%>
      </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <table class="table table-bordered table-striped">
  <tr>
    <th>Semester</th>
    <th>Registration</th>
    <th>Admit Card</th>
  </tr>
  <% @registrations.each do |registration| %>
  <tr>
    <% @term = Term.find(registration.terms_id)%>
    <td><%= @term.name%></td>
    <td><%= link_to 'view application', user_registration_path(registration.users_id,registration.id), class: 'btn'%></td>
    <td>Not Available</td>
  </tr>
  <% end%>
</table>
</div>
</div>
