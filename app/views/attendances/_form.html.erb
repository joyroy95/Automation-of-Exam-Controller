<%= simple_form_for(@attendance) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :atten, label: "Attendance" %>
  </div>
  <%=f.hidden_field :users_id, :value => params[:users_id]%>
  <%=f.hidden_field :batches_id, :value => params[:batch_id]%>
  <%=f.hidden_field :terms_id, :value => params[:submitted_id]%>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success'%>
  </div>
<% end %>
