<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <%= simple_form_for(@course_type, layout: :horizontal, inline_errors: false, remote: true) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">New Course Type</h4>
        </div>

        <div class="modal-body">
          <%= error_messages_for(@course_type) %>
          <%= f.input :name, placeholder: 'Name', label: false %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Save Course Type", class: "btn btn-primary " %>
        </div>
      <% end %>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
